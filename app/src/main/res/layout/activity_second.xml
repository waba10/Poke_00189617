<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"

              tools:context=".SecondActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3" android:orientation="horizontal" android:gravity="center">

        <ImageView android:layout_width="200dp" android:layout_height="200dp" android:id="@+id/iv_pokemon2" android:layout_margin="8dp"
        />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:gravity="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="25dp"
                  android:text="Nombre: " android:textColor="@color/colorPrimary" android:fontFamily="casual"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:id="@+id/tv_nombre" android:textColor="@color/colorPrimary" android:fontFamily="casual"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:gravity="center" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="ID: "  android:textSize="25dp" android:textColor="@color/colorPrimary" android:fontFamily="casual"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:id="@+id/tv_id"  android:textColor="@color/colorPrimary" android:fontFamily="casual"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:gravity="center" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:text="Experiencia: " android:textColor="@color/colorPrimary" android:fontFamily="casual"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:id="@+id/tv_experiencia" android:textColor="@color/colorPrimary" android:fontFamily="casual"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:gravity="center" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:text="Altura: "   android:textColor="@color/colorPrimary" android:fontFamily="casual"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:id="@+id/tv_altura" android:textColor="@color/colorPrimary" android:fontFamily="casual"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:gravity="center" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:text=" Peso: " android:textColor="@color/colorPrimary" android:fontFamily="casual"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="25dp"
                  android:id="@+id/tv_peso" android:textColor="@color/colorPrimary" android:fontFamily="casual"/>

    </LinearLayout>







</LinearLayout>